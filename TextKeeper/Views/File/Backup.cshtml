@model List<string>
@{
    ViewData["Title"] = "File Manager";
}

<h2>Recycle Bin</h2>

<form method="get" asp-action="Backup">
    <input type="text" name="search" placeholder="Search files..." />
    <button type="submit">Search</button>
</form>

<ul>
    @foreach (var file in Model)
    {
        <li>
            @file
            <a asp-action="PermanentDelete" asp-route-fileName="@file">Delete</a>
            <a asp-action="Resotre" asp-route-fileName="@file">Resotre</a>
            <a asp-action="ReciclyBinFileView" asp-route-fileName="@file">View</a>
        </li>
    }
</ul>

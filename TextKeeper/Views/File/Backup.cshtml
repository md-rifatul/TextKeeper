@model List<string>
@{
    ViewData["Title"] = "Recycle Bin";
}

<div class="container mx-auto p-6 min-h-screen bg-gray-50">
    <h2 class="text-3xl font-bold text-center mb-8 text-gray-800">🗑 Recycle Bin</h2>

    <!-- Search Bar -->
    <form method="get" asp-action="Backup" class="flex flex-col md:flex-row items-center justify-center gap-3 mb-6">
        <input type="text" name="search" placeholder="Search files..."
               class="w-full md:w-1/2 px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400 transition" />
        <button type="submit"
                class="px-6 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition">
            🔍 Search
        </button>
    </form>

    <!-- File List -->
    <div class="bg-white rounded-2xl shadow-lg p-4">
        <ul class="divide-y divide-gray-200">
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var file in Model)
                {
                    <li class="flex flex-col md:flex-row items-center justify-between py-3">
                        <span class="text-gray-700 font-medium truncate w-full md:w-auto">@file</span>
                        <div class="flex gap-3 mt-2 md:mt-0">
                            <a asp-action="PermanentDelete" asp-route-fileName="@file"
                               class="px-4 py-1 bg-red-500 text-white rounded-lg shadow hover:bg-red-600 transition"
                               onclick="return confirm('Are you sure you want to permanently delete @file?');">
                                🗑 Delete
                            </a>
                            <a asp-action="Resotre" asp-route-fileName="@file"
                               class="px-4 py-1 bg-green-500 text-white rounded-lg shadow hover:bg-green-600 transition">
                                ♻ Restore
                            </a>
                        </div>
                    </li>
                }
            }
            else
            {
                <li class="text-center text-gray-500 py-4">No files in the recycle bin</li>
            }
        </ul>
    </div>
</div>
